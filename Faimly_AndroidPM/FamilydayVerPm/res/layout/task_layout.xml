<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF"
  >
     <Button
        android:id="@+id/task_topLabel"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:background="#C92525"
        android:text="@string/task"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:drawableBottom="@drawable/line"
        />
       <Button
        android:layout_width="49dp"
        android:layout_height="25dp"
        android:background="@drawable/logo_small_red"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        />
       <Button
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/line_red"
        android:layout_toRightOf="@id/task_topLabel"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@id/task_topLabel"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="10dp"
        />
   			<ImageButton 
                  android:id="@+id/task_back"
                  android:layout_width="fill_parent"
             	  android:layout_height="55dp"
             	  android:src="@drawable/back"
             	  android:layout_centerHorizontal="true"
             	  android:layout_alignParentBottom="true"
             	  android:background="@drawable/edit_back"
                 />
    <RelativeLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_below="@id/task_topLabel"
    	android:layout_above="@id/task_back"
    	>
    <ListView 
    		android:id="@+id/task_listview"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_marginLeft="5dp"
    		android:layout_marginRight="5dp"
    		android:dividerHeight="5dp"
    		android:divider="@null"
    		android:cacheColorHint="@android:color/transparent"
    		android:fadingEdge="none"
    		android:listSelector="#00000000"
    		android:layout_marginBottom="10dp"
    	></ListView>
      
    	</RelativeLayout>
</RelativeLayout>
