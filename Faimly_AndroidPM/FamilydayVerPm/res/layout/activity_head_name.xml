<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#FFFFFF">
    <Button
        android:id="@+id/head_name_topLabel"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:background="@drawable/signin_gray"
        android:text="@string/signin_set"
        android:textSize="25sp"
        android:gravity="bottom|center_horizontal"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />
       <Button
        android:layout_width="49dp"
        android:layout_height="25dp"
        android:background="@drawable/signin_logo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        />
       <Button
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/line"
        android:layout_toRightOf="@id/head_name_topLabel"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@id/head_name_topLabel"
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@id/head_name_topLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textColor="#6D6D6D"
        android:text="点击下方设置头像"
        />
       <ImageView
        android:id="@+id/head_name_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#e0e0e0"
        android:layout_below="@id/head_name_topLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:src="@drawable/pic_default"
        />
       <EditText
        android:id="@+id/head_name_etName"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_back"
        android:layout_below="@id/head_name_icon"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:textColor="#6D6D6D"
        android:padding="10dp"
        android:hint="@string/signin_set_name"
        />
        
         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:layout_alignParentBottom="true"
             android:background="@drawable/edit_back"
             >
              <Button 
                  android:id="@+id/head_name_bottom_center"
                  android:layout_width="40dp"
             	  android:layout_height="fill_parent"
             	  android:gravity="center"
             	  android:background="@null"
             	  android:layout_centerHorizontal="true"
                 />
              <ImageButton 
                  android:id="@+id/head_name_confirm"
                  android:layout_width="100dp"
             	  android:layout_height="fill_parent"
             	  android:gravity="center"
             	  android:src="@drawable/confirm"
             	  android:background="@null"
             	  android:layout_toLeftOf="@id/head_name_bottom_center"
                 />
               <ImageButton 
                  android:id="@+id/head_name_ignore"
                  android:layout_width="100dp"
             	  android:layout_height="fill_parent"
             	  android:gravity="center"
             	  android:src="@drawable/ignore"
             	  android:background="@null"
             	  android:layout_toRightOf="@id/head_name_bottom_center"
                 />
             </RelativeLayout>
</RelativeLayout>