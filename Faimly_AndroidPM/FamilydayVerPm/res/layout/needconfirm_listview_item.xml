<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
     android:paddingLeft="10dp"
	 android:paddingRight="10dp"
    >
    <RelativeLayout 
         	android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/add_item_back"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:paddingLeft="10dp"
		    android:paddingRight="3dp"
        >
    <ImageView 
        	android:id="@+id/needconfirm_listview_item_head"
        	android:layout_width="60dp"
        	android:layout_height="60dp"
        	android:background="#e0e0e0"
        	android:layout_centerVertical="true"
        	/>
      <ImageView 
        	android:id="@+id/needconfirm_listview_item_head_vip"
        	android:layout_width="15dp"
        	android:layout_height="15dp"
        	android:layout_alignRight="@id/needconfirm_listview_item_head"
        	android:layout_alignBottom="@id/needconfirm_listview_item_head"
        	/>
	 <TextView
        android:id="@+id/needconfirm_listview_item_name"
    	android:layout_width="110dp"
     	android:layout_height="fill_parent"
     	android:layout_toRightOf="@id/needconfirm_listview_item_head"
     	android:textSize="22sp"
     	android:textStyle="bold"
     	android:textColor="#9ED54A"
     	android:paddingLeft="10dp"
     	android:ellipsize="marquee"
     	android:maxLines="2"
     	android:gravity="left|center_vertical"
        />
	 <Button
        android:id="@+id/needconfirm_listview_item_confirm"
        android:layout_alignParentRight="true"
    	android:layout_width="50dp"
     	android:layout_height="40dp"
     	android:layout_centerVertical="true"
     	android:layout_marginLeft="10dp"
     	android:layout_marginRight="10dp"
     	android:background="@drawable/agree"
        />
	 <Button
        android:id="@+id/needconfirm_listview_item_cancel"
        android:layout_toLeftOf="@+id/needconfirm_listview_item_confirm"
    	android:layout_width="50dp"
     	android:layout_height="40dp"
     	android:layout_centerVertical="true"
     	android:background="@drawable/cancel"
        />
	 
</RelativeLayout>
</RelativeLayout>