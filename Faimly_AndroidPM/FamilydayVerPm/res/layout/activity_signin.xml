<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#FFFFFF">
    <Button
        android:id="@+id/signin_topLabel"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:background="@drawable/signin_gray"
        android:text="@string/signin"
        android:textSize="25sp"
        android:gravity="bottom|center_horizontal"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />
       <Button
        android:layout_width="49dp"
        android:layout_height="25dp"
        android:background="@drawable/signin_logo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        />
       <Button
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/line"
        android:layout_toRightOf="@id/signin_topLabel"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@id/signin_topLabel"
        />
       <EditText
        android:id="@+id/signin_etUser"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_back"
        android:layout_below="@id/signin_topLabel"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:textColor="#6D6D6D"
        android:padding="10dp"
        android:hint="@string/signin_hint_user"
        android:inputType="number"
        android:text=""
        />
       <EditText
        android:id="@+id/signin_etPw"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_back"
        android:layout_below="@id/signin_etUser"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColor="#6D6D6D"
        android:padding="10dp"
        android:hint="@string/signin_hint_pw"
        android:password="true"
        android:text=""
        />
        <CheckBox
        android:id="@+id/signin_btnSavePw"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="自动登录"
        android:checked="true"
        android:textColor="#000000"
        android:layout_below="@id/signin_etPw"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        />
         <ImageButton
        android:id="@+id/signin_btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/sign_in"
        android:layout_alignTop="@id/signin_btnSavePw"
        android:layout_toRightOf="@id/signin_btnSavePw"
        android:layout_alignRight="@id/signin_etPw"
        />
         
          <TextView
        android:id="@+id/signin_btnfindpwlabel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
		android:layout_below="@id/signin_btnSignIn"    
		android:layout_margin="5dp"
		android:text="@string/forgetpw"   
		android:gravity="center" 
		android:layout_alignLeft="@id/signin_btnSavePw"
		android:textColor="#666666"
		android:textSize="16sp"
        />
            <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/table_bottom"
        android:layout_below="@id/signin_btnfindpwlabel"    
        android:layout_alignLeft="@id/signin_btnfindpwlabel"
        android:layout_alignRight="@id/signin_etPw"
        android:layout_marginTop="1dp"
        />
            <Button
        android:id="@+id/signin_btnfindpw"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/table_top"
        android:layout_below="@id/signin_btnfindpwlabel"  
        android:layout_alignLeft="@id/signin_btnfindpwlabel"
        android:layout_alignRight="@id/signin_etPw"
        android:drawableRight="@drawable/arrow_2"
        android:paddingRight="20dp"
        android:text="@string/findpw"
        android:textColor="#666666"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        />
         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:layout_alignParentBottom="true"
             android:background="@drawable/edit_back"
             >
              <Button 
                 android:id="@+id/signin_bottom_center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:visibility="invisible"
                 />
             <ImageButton 
                  android:id="@+id/sign_in_help"
                  android:layout_width="100dp"
             	  android:layout_height="fill_parent"
             	  android:gravity="center"
             	  android:src="@drawable/help"
             	  android:background="@null"
             	  android:layout_toLeftOf="@id/signin_bottom_center"
                 />
              <ImageButton 
                  android:id="@+id/sign_in_register"
                  android:layout_width="100dp"
             	  android:layout_height="fill_parent"
             	  android:gravity="center"
             	  android:src="@drawable/register"
             	  android:background="@null"
             	  android:layout_toRightOf="@id/signin_bottom_center"
                 />
             </RelativeLayout>
</RelativeLayout>